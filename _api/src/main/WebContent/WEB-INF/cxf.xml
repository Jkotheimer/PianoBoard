<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:jaxws="http://cxf.apache.org/jaxws"
	   xmlns:jaxrs="http://cxf.apache.org/jaxrs"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans
	   http://www.springframework.org/schema/beans/spring-beans.xsd
	   http://cxf.apache.org/jaxws
	   http://cxf.apache.org/schemas/jaxws.xsd
	   http://cxf.apache.org/jaxrs
	   http://cxf.apache.org/schemas/jaxrs.xsd">
	<import resource="classpath:META-INF/cxf/cxf.xml" />
	<import resource="classpath:META-INF/cxf/cxf-servlet.xml" />

	<bean id="jacksonProvider" class="com.fasterxml.jackson.jaxrs.json.JacksonJaxbJsonProvider" /> <!--org.codehaus.jackson.jaxrs.JacksonJaxbJsonProvider" />-->
	<bean id="jsonProvider" class="com.fasterxml.jackson.jaxrs.json.JacksonJsonProvider" /> <!--org.codehaus.jackson.jaxrs.JacksonJsonProvider" />-->
<!-- 	<bean id="jaxbProvider" class="org.apache.cxf.jaxrs.provider.JAXBElementProvider" /> -->

	<jaxrs:server name="pianoboard_API" address="http://localhost:8081">
		<jaxrs:serviceBeans>
			<ref bean="ProjectService" />
			<ref bean="AccountService" />
			<ref bean="AuthService" />
			<ref bean="LandingPageService" />
		</jaxrs:serviceBeans>
		<jaxrs:providers>
			<ref bean="jsonProvider" />
			<ref bean="jacksonProvider" />
<!-- 			<ref bean="jaxbProvider" /> -->
		</jaxrs:providers>

		<jaxrs:schemaLocations>
			<jaxrs:schemaLocation>pianoboard.service.representations.AccountRepresentation</jaxrs:schemaLocation>
			<jaxrs:schemaLocation>pianoboard.service.representations.ProjectRepresentation</jaxrs:schemaLocation>
			<jaxrs:schemaLocation>pianoboard.service.representations.TrackRepresentation</jaxrs:schemaLocation>
			<jaxrs:schemaLocation>pianoboard.service.representations.RecordingRepresentation</jaxrs:schemaLocation>
			<jaxrs:schemaLocation>pianoboard.service.representations.NoteRepresentation</jaxrs:schemaLocation>
			<jaxrs:schemaLocation>pianoboard.service.representations.AccountSearchResult</jaxrs:schemaLocation>
			<jaxrs:schemaLocation>pianoboard.service.requests.AccountRequest</jaxrs:schemaLocation>
			<jaxrs:schemaLocation>pianoboard.domain.account.Token</jaxrs:schemaLocation>

			<jaxrs:schemaLocation>javax.servlet.http.HttpServletRequest</jaxrs:schemaLocation>
			<jaxrs:schemaLocation>java.util.ArrayList</jaxrs:schemaLocation>
			<jaxrs:schemaLocation>java.util.Arrays</jaxrs:schemaLocation>
			<jaxrs:schemaLocation>java.util.List</jaxrs:schemaLocation>
		</jaxrs:schemaLocations>

	</jaxrs:server>
	<bean id="ProjectService" class="pianoboard.service.resources.ProjectService" />
	<bean id="AccountService" class="pianoboard.service.resources.AccountService" />
	<bean id="AuthService" class="pianoboard.service.resources.AuthenticationService" />
	<bean id="LandingPageService" class="pianoboard.service.resources.LandingPageService" />
</beans>
