<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:jaxws="http://cxf.apache.org/jaxws"
	   xmlns:jaxrs="http://cxf.apache.org/jaxrs"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans
	   http://www.springframework.org/schema/beans/spring-beans.xsd
	   http://cxf.apache.org/jaxws
	   http://cxf.apache.org/schemas/jaxws.xsd
	   http://cxf.apache.org/jaxrs
	   http://cxf.apache.org/schemas/jaxrs.xsd">
	<import resource="classpath:META-INF/cxf/cxf.xml" />
	<import resource="classpath:META-INF/cxf/cxf-servlet.xml" />

	<bean id="jacksonProvider" class="org.codehaus.jackson.jaxrs.JacksonJaxbJsonProvider" />

	<jaxrs:server name="pianoboard_API" address="http://localhost:8081">
		<jaxrs:serviceBeans>
			<ref bean="ProjectService" />
			<ref bean="AccountService" />
		</jaxrs:serviceBeans>
		<jaxrs:providers>
			<ref bean="jacksonProvider" />
		</jaxrs:providers>

		<jaxrs:schemaLocations>
			<jaxrs:schemaLocation>pianoboard.domain.project.Project</jaxrs:schemaLocation>
			<jaxrs:schemaLocation>pianoboard.domain.account.Account</jaxrs:schemaLocation>
			<jaxrs:schemaLocation>pianoboard.domain.service.Representations.AccountRepresentation</jaxrs:schemaLocation>
			<jaxrs:schemaLocation>pianoboard.domain.service.Representations.ProjectRepresentation</jaxrs:schemaLocation>
		</jaxrs:schemaLocations>

	</jaxrs:server>
	<bean id="ProjectService" class="pianoboard.service.Resources.ProjectService" />
	<bean id="AccountService" class="pianoboard.service.Resources.AccountService" />
</beans>
